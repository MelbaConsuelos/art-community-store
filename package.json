{
  "name": "art-community-store",
  "version": "1.0.0",
  "description": "Project for web course",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write . && git add -A ."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MelbaConsuelos/art-community-store.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@stripe/react-stripe-js": "^1.6.0",
    "@stripe/stripe-js": "^1.21.1",
    "bcrypt": "^5.0.0",
    "concurrently": "^5.3.0",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.11",
    "stripe": "^8.191.0",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.0"
  },
  "bugs": {
    "url": "https://github.com/MelbaConsuelos/art-community-store/issues"
  },
  "homepage": "https://github.com/MelbaConsuelos/art-community-store#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
